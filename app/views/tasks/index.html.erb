<h1>All Tasks</h1>

<div class="container">
  <% @tasks.each do |task| %>
    <div class="row">
      <div class="col-1"><%= task[:completed] ? 'x' : ' ' %></div>
      <div class="col-3"><%= link_to task[:title], task_path(task) %></div>
      <div class="col-1"><%= link_to '(delete)', task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %></div>
    </div>
  <% end %>
</div>
</br>

<%= link_to 'Add a new task', new_task_path %>
